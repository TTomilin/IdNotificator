<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:id="@+id/header_notification"
              android:layout_height="48dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:clipToPadding="false"
              android:background="@color/primary_light">

    <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Status"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/header_status"
            android:onClick="setSortingParameter"
            android:clickable="true"
            android:layout_weight="1"
            android:focusable="true"/>

    <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Type"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/header_type"
            android:onClick="setSortingParameter"
            android:clickable="true"
            android:layout_weight="1"/>
    <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Method"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/header_method"
            android:onClick="setSortingParameter"
            android:clickable="true"
            android:layout_weight="1"/>
    <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Service"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/header_service"
            android:onClick="setSortingParameter"
            android:clickable="true"
            android:layout_weight="1"/>
    <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/header_date"
            android:onClick="setSortingParameter"
            android:clickable="true"
            android:layout_weight="1"/>
</LinearLayout><!-- From: file:/C:/Users/Tristan/IdeaProjects/IdNotificator/app/src/main/res/layout/header_notification.xml -->